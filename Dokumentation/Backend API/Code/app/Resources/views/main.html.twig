{% extends '::base.html.twig' %}

{% block body %}
    {% set route = app.request.attributes.get('_route') | default('')%}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand {{ route == 'homepage' ? 'active' }}" href="{{ path('homepage') }}">Worktime</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="{{ route == 'fos_user_registration_register' ? 'active' }}"><a href="{{ path('fos_user_registration_register') }}">Benutzer registrieren</a></li>
                    <li class="{{ route == 'fos_user_profile_edit' ? 'active' }}"><a href="{{ path('fos_user_profile_edit') }}">Benutzer editieren</a></li>
                    <li class="{{ route matches '/^activity_/' ? 'active' }}"><a href="{{ path('activity_index') }}">Aktivit√§ten editieren</a></li>
                    <li><a href="{{ path('nelmio_api_doc_index') }}">API Dokumentation</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    <div class="container">
        {% block container %}
        {% endblock %}
    </div><!-- /.container -->
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{% endblock %}



