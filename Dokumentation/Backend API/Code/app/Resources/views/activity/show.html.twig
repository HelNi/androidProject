{% extends 'main.html.twig' %}

{% block container %}
    <h1>Activity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Deprecated</th>
                <td>{% if activity.deprecated %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Kategorie</th>
                <td>{{ activity.categoryName }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('activity_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('activity_edit', { 'id': activity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
