<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="24dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/profile_fragment_headline"
        android:textSize="@dimen/profile_headline_text_size"/>

    <TextView
        android:id="@+id/salutation_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/profile_fragment_salutation"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/first_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/profile_fragment_user_first_name"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/last_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/profile_fragment_user_last_name"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/profile_fragment_user_email"
        android:textSize="@dimen/profile_text_size" />



</LinearLayout>
