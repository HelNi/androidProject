<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_above="@+id/userValueTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:text="@string/profile_fragment_headline"
        android:textSize="@dimen/profile_headline_text_size"/>

    <TextView
        android:id="@+id/userTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_alignStart="@+id/emailTextView"
        android:layout_marginTop="200dp"
        android:text="@string/profile_fragment_user_name"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/userValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_alignBaseline="@+id/userTextView"
        android:layout_alignBottom="@+id/userTextView"
        android:layout_toEndOf="@+id/userTextView"
        android:text="@string/profile_fragment_user_name_value"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_alignStart="@+id/firstNameTextView"
        android:layout_below="@+id/userTextView"
        android:text="@string/profile_fragment_user_email"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/emailValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_below="@+id/userTextView"
        android:layout_toEndOf="@+id/emailTextView"
        android:text="@string/profile_fragment_user_email_value"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_alignStart="@+id/lastNameTextView"
        android:layout_below="@+id/emailTextView"
        android:text="@string/profile_fragment_user_first_name"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/firstNameValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_alignBaseline="@+id/firstNameTextView"
        android:layout_toEndOf="@+id/firstNameTextView"
        android:text="@string/profile_fragment_user_first_name_value"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstNameTextView"
        android:layout_marginStart="76dp"
        android:text="@string/profile_fragment_user_last_name"
        android:textSize="@dimen/profile_text_size" />

    <TextView
        android:id="@+id/lastNameValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/profile_layout_height"
        android:layout_below="@+id/firstNameValueTextView"
        android:layout_toEndOf="@+id/lastNameTextView"
        android:text="@string/profile_fragment_user_last_name_value"
        android:textSize="@dimen/profile_text_size" />

</RelativeLayout>
