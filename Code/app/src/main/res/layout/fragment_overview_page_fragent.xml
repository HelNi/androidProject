<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.worktime.OverviewPageFragent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/overview_page_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/overview_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hello_blank_fragment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#999" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee"
        android:padding="@dimen/activity_vertical_margin">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="Geleistete Stunden: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:id="@+id/overview_worked_hours"
                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </TableRow>
            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="Von Stunden:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:id="@+id/overview_total_hours"

                    android:padding="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </TableRow>

<!--
            <android.support.v7.widget.RecyclerView android:id="@+id/overview_activity_recycler">
                <TableRow>
                    <TextView
                        android:id="@+id/overview_category_name"
                        android:padding="8dp"
                        android:text="Von Stunden:"
