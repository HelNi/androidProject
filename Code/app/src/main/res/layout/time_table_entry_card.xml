<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <android.support.v7.widget.CardView

        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        //TODO use EditText

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/layout_border">
            <ImageView
                android:id="@+id/project_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/text_view_border"/>

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/project_icon"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:text="Urlaub"
                android:padding="6dp"
                android:textSize="10sp"
                android:layout_alignEnd="@+id/entry_end_time" />

            <TextView
                android:id="@+id/entry_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_below="@+id/project_name"
                android:layout_toEndOf="@+id/project_icon"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:padding="6dp"
                android:text="Anfang: 12:10 Uhr"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/entry_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/entry_start_time"
                android:layout_alignTop="@+id/entry_start_time"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/entry_start_time"
                android:background="@drawable/text_view_border"
                android:gravity="center"
                android:padding="6dp"
                android:text="Ende: 12:10 Uhr"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/entry_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view_border"
                android:ellipsize="end"
                android:layout_marginTop="1dp"
                android:maxLength="255"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Vor langer langer Zeit, in einer weit entfernten Welt, die gar nicht so weit weg ist, passierte nichts. Ende der Geschichte"
                android:textSize="14sp"
                android:layout_below="@+id/entry_start_time" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>