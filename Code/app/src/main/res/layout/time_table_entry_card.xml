<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        card_view:cardCornerRadius="3dp"
        android:padding="16dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:padding="16dp">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:padding="6dp"
                android:text="Urlaub"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/entry_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/project_name"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:padding="6dp"
                android:text="Anfang: 12:10 Uhr"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/entry_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/entry_start_time"
                android:layout_alignTop="@+id/entry_start_time"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/entry_start_time"
                android:gravity="center"
                android:padding="6dp"
                android:text="Ende: 12:10 Uhr"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/entry_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entry_start_time"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:maxLength="255"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Vor langer langer Zeit, in einer weit entfernten Welt, die gar nicht so weit weg ist, passierte nichts. Ende der Geschichte"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Button
                android:id="@+id/button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/entry_description"
                android:text="Editieren" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>